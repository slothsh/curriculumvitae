{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
      "@src/*": ["src/*"]
    }
  },

  "include": ["**/*", "svelte.d.ts", "rollup.config.ts"],
  "exclude": [ "src/templates/**/*" ]
}
